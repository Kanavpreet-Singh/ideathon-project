    <!-- Hero Section -->
    <header class="hero">
        <img src="city.jpg" alt="Cityscape" class="hero-image">
        <h1>Welcome to E-Governance</h1>
        <p>Empowering citizens through digital governance.</p>
        <a href="#services" class="cta">Explore Services</a>
    </header>

    <!-- About Us Section -->
    

    <!-- Services Section -->
    <section id="services" class="section">
        <h2>Our Services</h2>
        <div class="services-container">
            <div class="service">
                
                <h3>Post an Issue</h3>
                <p>
                    Submit issues such as drainage blockages, potholes, or other problems 
                    directly to the government for quicker resolutions.
                </p>
                <br>
                <form action="/newIssue">
                    <button class="btn">Post</button>

                </form>
            </div>
            <div class="service">
                
                <h3>View all issues</h3>
                <p>
                    Check for issues posted on the website and contribute by upvoting or providing feedbacks!
                </p>
                <br>
                <br>
                <form action="/issues1">
                    <button class="btn">View</button>

                </form>

            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer id="contact" class="footer">
        <p>&copy; 2024 E-Governance. All rights reserved.</p>
        <p>Email: contact@egovernance.com | Phone: +91-123-456-7890</p>
    </footer>

